.container
  = form_for(resource, as: resource_name, url: session_path(resource_name),html: {class: 'form-signin'} ) do |f|
    %h2.form-signin-heading Please sign in
    = f.label :email,class: "sr-only",for: "inputEmail"
    = f.email_field :email,id: "inputEmail",class: "form-controll",autofocus: "", placeholder: "Email address", required: "", type: "email"
    = f.label :password ,class:"sr-only",for: "inputPassword"
    = f.password_field :password,id: "inputPassword",class: "form-control",placeholder: "Password", required: "", type: "password"
    .checkbox
      = f.label :remember_me do
        = f.check_box :remember_me,type: "checkbox", value: "remember-me"
        Remember me
    = f.submit 'Sign in',class: "btn btn-lg btn-primary btn-block"
  .text-center
    %p
      Not a member?
      = link_to "Sign up now","/users/sign_up"