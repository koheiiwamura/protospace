.jumbotron
  .container.text-center
    = image_tag("header_logo.png", alt: "PROTO TYPE - SHARE THE PROTOTYPE", height: "73px")

.filter-nav
  .container
    .row
      %ul.nav.nav-pills.col-lg-11
        %li{role: "presentation"}
          = link_to "Popular PROTO", prototypes_popular_index_path
        %li.active{role: "presentation"}
          = link_to "Newest Proto", prototypes_newest_index_path
      = button_to "View Tags", "", class: "btn btn-default col-lg-1"

.container.proto-list
  .row
    - @prototypes.each do |prototype|
      = render partial:"prototypes/prototype", locals:{prototype: prototype}

.text-center
  = paginate @prototypes
