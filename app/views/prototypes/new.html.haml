= form_for(@prototype,html:{class:"container proto-new"}) do |f|
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        = f.text_field :title, placeholder: "Title"
    .row
      .col-md-12
        .cover-image-upload.js-imgInput
          = f.fields_for :images do |image_fields|
            = image_fields.file_field :image, id:'protoInput', required: true
            = image_fields.hidden_field :roll, value: "main"
        }
      .col-md-12
        %ul.proto-sub-list.list-group
          %li.list-group-item.col-md-4
            .image-upload.js-imgInput
              = f.fields_for :images do |image_fields|
                = image_fields.file_field :image, id:'protoInput'
                = image_fields.hidden_field :roll, value: "sub"
          %li.list-group-item.col-md-4
            .image-upload.js-imgInput
              = f.fields_for :images do |image_fields|
                = image_fields.file_field :image, id:'protoInput'
                = image_fields.hidden_field :roll, value: "sub"
          %li.list-group-item.col-md-4
            .image-upload-plus
              %span +
    .row.proto-description
      .col-md-12
        = f.text_field :catch_copy,  placeholder: "Catch Copy"
      .col-md-12
      = f.text_area :concept, cols: "30", rows: "4", placeholder: "Concept"
      .col-md-12
        %h4 Tag List
        .row
          .col-md-3
            = text_field_tag "prototype[tag][]", "", placeholder: "Web Design"
          .col-md-3
            = text_field_tag "prototype[tag][]", "", placeholder: "UI"
          .col-md-3
            = text_field_tag "prototype[tag][]", "", placeholder: "Application"
    .row.text-center.proto-btn
      = f.submit "Publish", :class=>"button btn btn-lg btn-primary btn-block"
