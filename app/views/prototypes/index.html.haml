.jumbotron
  .container.text-center
    = image_tag("header_logo.png", alt: "PROTO TYPE - SHARE THE PROTOTYPE", height: "73px")

.filter-nav
  .container
    .row
      %ul.nav.nav-pills.col-lg-11
        %li.active{role: "presentation"}
          = link_to "Popular PROTO","#"
        %li{role: "presentation"}
          = link_to "Newest Proto","#"
      = button_to "View Tags","",{class: "btn btn-default col-lg-1"}

.container.proto-list
  .row
    - @prototypes.each do |prototype|
      .col-sm-4.col-md-3.proto-content
        .thumbnail
          = link_to "/prototypes/#{prototype.id}" do
            = image_tag prototype.main_img
            .caption
              %h3
                = prototype.title
              .proto-meta
                .proto-user
                  = link_to "by #{prototype.user.username}","#"
                .proto-posted
                  = prototype.created_at.strftime("%b %d")
              %ul.proto-tag-list.list-inline
                %li
                  = link_to "ipad","#",class:"btn btn-default"
                %li
                  = link_to "wireframe","#",class:"btn btn-default"


