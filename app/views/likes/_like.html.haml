- if user_signed_in?
  - if prototype.like_user(current_user.id)
    = button_to prototype_like_path(prototype,like), method: :delete, class: "btn btn-default", remote: true do
      = image_tag("icon_red_heart.svg")
      Like
      %span#like-sum
        = prototype.likes_count
  - else
    = button_to prototype_likes_path(prototype), class: "btn btn-default", remote: true do
      = image_tag("icon_heart.svg")
      Like
      %span#like-sum
        = prototype.likes_count
- else
  .btn.btn-default
    Like
    %span
      = prototype.likes_count
